<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tmyx.backend.mapper.AreaMapper">

    <select id="findAreaByLngLat" resultType="com.tmyx.backend.entity.ServiceArea">
        SELECT * FROM service_area
        WHERE ST_Contains(region, ST_GeomFromText(#{pointWkt})) = 1
--         AND is_active = 1
        LIMIT 1
    </select>

</mapper>